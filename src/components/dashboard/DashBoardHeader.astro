    <script type="module">
       // Funcionalidad del menú de usuario
   const userMenuBtn = document.getElementById('userMenuBtn');
        const userMenu = document.getElementById('userMenu');

        userMenuBtn.addEventListener('click', function(e) {
            e.stopPropagation();
            userMenu.classList.toggle('hidden');
        });

        // Cerrar menú al hacer clic fuera
        document.addEventListener('click', function(e) {
            if (!userMenu.contains(e.target) && !userMenuBtn.contains(e.target)) {
                userMenu.classList.add('hidden');
            }
        });

        // Funcionalidad para crear nuevo tablero
        const createBoardBtn = document.querySelector('button[class*="bg-trello-gray"]');
        createBoardBtn.addEventListener('click', function() {
            const boardName = prompt('Nombre del nuevo tablero:');
            if (boardName) {
                // Aquí podrías agregar la lógica para crear un nuevo tablero
                alert(`Tablero "${boardName}" creado exitosamente!`);
            }
        });
    </script>