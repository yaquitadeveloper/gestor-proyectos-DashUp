---
import { Icon } from 'astro-icon/components'

---

<header
      class="bg-white border-b border-gray-300 px-4 py-2 flex items-center justify-between"
    >
      <div class="flex items-center space-x-4">
        
        <div class="flex items-center space-x-2">
          <div
            class="w-8 h-8 bg-gradient-to-br from-blue-400 to-blue-600 rounded flex items-center justify-center"
          >
            <span class="text-white font-bold text-sm">D</span>
          </div>
          <span class="text-blue font-semibold text-lg">DashUp</span>
        </div>
      </div>

      <!-- Buscar -->
      <div class="flex-1 max-w-md mx-8">
        <div class="relative">
          <input
            type="text"
            placeholder="Buscar"
            class="w-full bg-trello-dark text-white placeholder-gray-400 px-4 py-2 rounded border border-gray-300 focus:outline-none focus:border-blue-500"
          />
          <Icon name="buscar" size={20} class="absolute right-3 top-2.5 text-gray-400" />
        </div>
      </div>

      
      <div class="flex items-center space-x-6">
       
        <div class="flex items-center space-x-2">
         
          <div class="relative">
            <button
              id="userMenuBtn"
              class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center font-bold text-sm text-black hover:bg-yellow-400 transition-colors cursor-pointer"
            >
              YR
            </button>
            
            <div
              id="userMenu"
              class="hidden absolute right-0 mt-2 w-80 bg-white text-black rounded-lg shadow-xl border z-50"
            >
               <div class="p-4"> <!--border-b -->
                <div class="flex items-center space-x-3">
                  <div
                    class="w-10 h-10 bg-yellow-500 rounded-full flex items-center justify-center font-bold"
                  >
                    YR
                  </div>
                  <div>
                    <div class="font-semibold">Yaqui Raquel</div>
                    <div class="text-sm text-gray-600">
                      yaquita2014@gmail.com
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="border-t py-2">
                <div
                  class="px-4 py-1 text-xs font-semibold text-gray-500 uppercase"
                >
                DASHUP
                </div>
                <a href="#" class="block px-4 py-2 hover:bg-gray-100"
                  >Perfil y visibilidad</a
                >
                
                <a href="#" class="block px-4 py-2 hover:bg-gray-100"
                  >Tarjetas</a
                >
              </div>
              <div class="border-t py-2">
                <button
                  class="w-full text-left px-4 py-2 hover:bg-gray-100 flex items-center"
                >
                <Icon name="plus" size={20} />
                  Crear Espacio de trabajo
                </button>
              </div>
              
              <div class="border-t py-2">
                <a
                  href="/."
                  class="block px-4 py-2 hover:text-gray-600 text-gray-400"
                  >Cerrar sesión</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <script type="module">
       // Funcionalidad del menú de usuario
   const userMenuBtn = document.getElementById('userMenuBtn');
        const userMenu = document.getElementById('userMenu');

        userMenuBtn.addEventListener('click', function(e) {
            e.stopPropagation();
            userMenu.classList.toggle('hidden');
        });

        // Cerrar menú al hacer clic fuera
        document.addEventListener('click', function(e) {
            if (!userMenu.contains(e.target) && !userMenuBtn.contains(e.target)) {
                userMenu.classList.add('hidden');
            }
        });

        // Funcionalidad para crear nuevo tablero
        const createBoardBtn = document.querySelector('button[class*="bg-trello-gray"]');
        createBoardBtn.addEventListener('click', function() {
            const boardName = prompt('Nombre del nuevo tablero:');
            if (boardName) {
                // Aquí podrías agregar la lógica para crear un nuevo tablero
                alert(`Tablero "${boardName}" creado exitosamente!`);
            }
        });
    </script>