<!-- Hero Section -->
    <section
      class="relative overflow-hidden bg-gradient-to-br from-blue-50 to-purple-50"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <!-- Left content -->
          <div class="space-y-8">
            <h1
              class="text-5xl lg:text-6xl font-bold text-gray-900 leading-tight"
            >
              Captura, organiza y aborda tus tareas pendientes en cualquier
              lugar.
            </h1>

            <p class="text-xl text-gray-600 leading-relaxed">
              Escapa del desorden y el caos: da rienda suelta a tu productividad
              con DashUp.
            </p>

            <!-- Email signup form -->
            <div class="space-y-4">
              <form
                id="signup-form1"
                class="flex flex-col sm:flex-row gap-3 max-w-md"
              >
                <input
                  type="email"
                  id="email-input"
                  placeholder="Correo electrónico"
                  class="flex-1 px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-trello-blue focus:border-transparent"
                  required
                />
                <button
                  type="submit"
                  class="bg-trello-blue hover:bg-trello-blue-dark text-white px-8 py-3 font-semibold rounded-md transition-colors"
                >
                  Regístrate, ¡es gratis!
                </button>
              </form>

              <p class="text-sm text-gray-500">
                Al introducir mi correo electrónico, acepto la
                <a href="#" class="text-trello-blue underline"
                  >política de privacidad</a
                >
              </p>
            </div>

            <!-- Video link -->
            <button
              id="video-btn"
              class="flex items-center space-x-2 text-trello-blue hover:text-trello-blue-dark font-medium transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8 5v14l11-7z" />
              </svg>
              <span>Ver el vídeo</span>
            </button>
          </div>

          <!-- Right content - Phone mockup -->
          <div class="relative">
            <div class="relative z-50">
              <img
                src="/images/mobile.png"
                alt="Trello mobile app"
                class="mx-auto max-w-sm"
              />
            </div>

            <!-- Decorative elements -->
            <div
              class="absolute top-10 right-10 w-20 h-20 bg-orange-400 rounded-lg transform rotate-12 opacity-80"
            ></div>
            <div
              class="absolute bottom-20 right-0 w-16 h-16 bg-purple-500 rounded-full opacity-60"
            ></div>
            <div
              class="absolute top-1/2 -right-10 w-12 h-12 bg-yellow-400 rounded transform -rotate-12 opacity-70"
            ></div>

            <!-- App icons -->
            <div class="absolute top-20 -right-5 space-y-4">
              <div
                class="w-12 h-12 bg-white rounded-lg shadow-lg flex items-center justify-center"
              >
                <div class="w-8 h-8 bg-red-500 rounded"></div>
              </div>
              <div
                class="w-12 h-12 bg-white rounded-lg shadow-lg flex items-center justify-center"
              >
                <div class="w-8 h-8 bg-blue-500 rounded-full"></div>
              </div>
              <div
                class="w-12 h-12 bg-white rounded-lg shadow-lg flex items-center justify-center"
              >
                <div class="w-8 h-8 bg-green-500 rounded"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>